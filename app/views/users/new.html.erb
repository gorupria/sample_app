<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
 <%= render 'shared/error_messages' %>
  <div class="field">
  	<%= f.label :name %><br/>
	<%= f.text_field :name, class: 'roundField glowing-border' %>
  </div>
	
  <div class="field">
  	<%= f.label :email %><br/>
	<%= f.text_field :email, class: 'roundField' %>
  </div>

  <div class="field">
  	<%= f.label :password %><br/>
	<%= f.password_field :password, class: 'roundField' %>
  </div>

  <div class="field">
  	<%= f.label :password_confirmation, "Confirmation" %><br/>
	<%= f.password_field :password_confirmation, class: 'roundField' %>
  </div>

  <div class="actions">
  	<%= f.submit "Sign up" %>
  </div>
<% end %>
